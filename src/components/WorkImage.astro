---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: string;
  layout: "full-width" | "constrained";
  width: number;
  height: number;
  alt: string;
  className?: string;
}

const { src, layout, width, height, alt, className, ...rest } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/images/work/*.{jpeg,jpg,png,gif}",
);

if (!images[src])
  throw new Error(
    `"${src}" does not exist in glob: "src/assets/images/work/*.{jpeg,jpg,png,gif}"`,
  );
---

<Image
  src={images[src]()}
  layout={layout}
  width={width}
  height={height}
  alt={alt}
  class={`w-full h-full object-cover saturate-[.75] brightness-[.95] ${className ? className : ""}`}
  {...rest}
/>
